{
  "name": "kvkk-consent-tool",
  "version": "1.0.0",
  "description": "A mobile-first web utility for KVKK consent form signing with digital signatures and PDF processing",
  "main": "index.html",
  "scripts": {
    "start": "node proxy-server.js",
    "dev": "node proxy-server.js",
    "serve": "node proxy-server.js",
    "proxy": "node proxy-server.js",
    "backend": "cd backend && node server.js",
    "frontend": "python -m http.server 8000",
    "dev:full": "concurrently \"npm run frontend\" \"npm run backend\"",
    "dev:legacy": "concurrently \"npm run frontend\" \"npm run backend\""
  },
  "keywords": [
    "kvkk",
    "consent",
    "pdf-viewer",
    "mobile-first",
    "web-utility",
    "digital-signature",
    "pdf-processing"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "http-proxy-middleware": "^2.0.6",
    "node-fetch": "^2.7.0",
    "pdf-lib": "^1.17.1",
    "signature_pad": "^4.1.7"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "repository": {
    "type": "git",
    "url": ""
  },
  "engines": {
    "node": ">=14.0.0"
  }
}
